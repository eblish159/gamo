<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fs.four.gamo.calendar.dao.CalendarMainDAO">

    <!-- 특정 이벤트 조회 -->
    <select id="getCalendarEvents" parameterType="int" resultType="fs.four.gamo.calendar.vo.CalendarMainVO">
        SELECT *
        FROM CALENDAR_MAIN
        WHERE EVENT_ID = #{eventId}
    </select>

    <!-- 새로운 이벤트 추가 -->
    <insert id="insertCalendarEvent" parameterType="fs.four.gamo.calendar.vo.CalendarMainVO">
        INSERT INTO CALENDAR_MAIN (GUBUN, CAL_TITLE, CAL_DETAILS, START_DATE, END_DATE, SECRET)
        VALUES (#{gubun}, #{calTitle}, #{calDetails}, #{startDate}, #{endDate}, #{secret})
    </insert>
</mapper>

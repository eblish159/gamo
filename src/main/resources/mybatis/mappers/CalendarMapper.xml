<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fs.four.gamo.calendar.dao.CalendarMainDAO">

    <!-- 특정 이벤트 조회 리스트 -->
    <select id="CalendarEvents" parameterType="int" resultType="fs.four.gamo.calendar.vo.CalendarMainVO">
        SELECT *
        FROM CALENDAR_MAIN
    </select>

    <!-- 새로운 이벤트 추가 -->
    <insert id="calendarEvents" parameterType="fs.four.gamo.vo.calendar.CalendarMainVO">
        INSERT INTO CALENDAR_MAIN (GUBUN, CAL_TITLE, CAL_DETAILS, START_DATE, END_DATE)
        VALUES (#{gubun}, #{cal_title}, #{cal_detalls}, #{start_date}, #{end_date})
    </insert>
    <delete id="delete_cal">
        DELETE FROM CALENDAR_MAIN
        WHERE cal_no = #{cal_no}
    </delete>
</mapper>
